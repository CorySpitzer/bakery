<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">

      <h3 class="text-center">Edit {{model.title}}</h3>
    </div>

    <div class="panel-body">
      <form>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="title" class="col-md-4 control-label">Product Title</label>
            <div class="col-md-8">
              {{input value=model.title type="text" class="form-control"}}
            </div>
          </div>
        </div>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="description" class="col-md-4 control-label">Description</label>
            <div class="col-md-8">
              {{textarea value=model.description rows=5 class="form-control"}}
            </div>
          </div>
        </div>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="type" class="col-md-4 control-label">Batch size</label>
            <div class="col-md-8">
              {{input value=model.batchSize type="number" class="form-control" step="1"}}
            </div>
          </div>
        </div>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="date" class="col-md-4 control-label">Cost</label>
            <div class="col-md-8">
              <div class="input-group">
                <div class="input-group-addon">$</div>
                  {{input value=model.cost type="number" class="form-control"}}
              </div>
            </div>
          </div>
        </div>

        <div class="col-md-8 col-md-offset-4 stretch">
        </div>
      </form>
    </div>
    <div class="panel-footer">
      <button name="button" class="btn btn-info btn-block" {{action 'updateProduct'}}>Update product</button>
      <button name="button" class="btn btn-danger btn-block" {{action 'deleteProduct'}}>Delete product</button>
    </div>
  </div>
</div>
