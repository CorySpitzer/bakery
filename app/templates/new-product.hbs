<div class="col-md-6">
  <h3 class="text-center">Submit Your Beard For Review</h3>
  <br>
  <form>
    <div class="form-horizontal">
      <div class="form-group">
        <label for="title" class="col-md-4 control-label">Product Title</label>
        <div class="col-md-8">
          {{input value=title type="text" class="form-control"}}
        </div>
      </div>
    </div>
    <div class="form-horizontal">
      <div class="form-group">
        <label for="description" class="col-md-4 control-label">Description</label>
        <div class="col-md-8">
          {{textarea value=description rows=5 class="form-control"}}
        </div>
      </div>
    </div>
    <div class="form-horizontal">
      <div class="form-group">
        <label for="type" class="col-md-4 control-label">Batch size</label>
        <div class="col-md-8">
          {{input value=batchSize type="number" class="form-control" step="1"}}
        </div>
      </div>
    </div>
    <div class="form-horizontal">
      <div class="form-group">
        <label for="date" class="col-md-4 control-label">Cost</label>
        <div class="col-md-8">
          <div class="input-group">
            <div class="input-group-addon">$</div>
              {{input value=cost type="number" class="form-control"}}
          </div>
        </div>
      </div>
    </div>

    <button name="button" class="btn btn-info" {{action 'createProduct'}}>Create new product</button>
  </form>
</div>
